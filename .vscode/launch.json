  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": "${command:pickArgs}"
    },
    {
      "name": "Debug smart_merge_v5.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/smart_merge_v5.py",
      "console": "integratedTerminal",
      "args": ["src"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug smart_merge_v5.py with uv",
      "type": "debugpy",
      "request": "launch",
      "program": "/opt/homebrew/bin/uv",
      "args": ["run", "smart_merge_v5.py", "src"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}